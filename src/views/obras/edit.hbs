<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/obras/edit/{{obra.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" name="bas" class="form-control" placeholder="Obra" value="{{obra.bas}}"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="cliente" class="form-control" placeholder="Cliente"
                                value="{{obra.cliente}}">
                        </div>
                        <div class="form-group">
                            <input type="text" name="ubicacion" class="form-control" placeholder="Lugar"
                                value="{{obra.ubicacion}}">
                        </div>
                        <div class="form-group">
                            <input type="number" name="latitud" step="any" class="form-control" placeholder="Latitud"
                                value="{{obra.latitud}}">
                        </div>
                        <div class="form-group">
                            <input type="number" name="longitud" step="any" class="form-control" placeholder="Longitud"
                                value="{{obra.longitud}}">
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" class="form-control" placeholder="Descripcion"
                                rows="2">{{obra.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Cargar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>